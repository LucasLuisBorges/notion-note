generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum NotionStatus {
  BACKLOG
  PENDING
  RUNNING
  REVIEW
  DONE
}

model User {
  id         String   @id @default(cuid())
  first_name String
  last_name  String
  email      String   @unique
  password   String
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  notions Notion[]

  @@map("user")
}

model Notion {
  id      String        @id @default(cuid())
  title   String
  message String
  status  NotionStatus? @default(BACKLOG)
  term    DateTime?

  content Content[]
  userId  String
  user    User      @relation(fields: [userId], references: [id])

  @@map("notion")
}

model Content {
  id    String  @id @default(cuid())
  title String
  check Boolean

  contentId String
  content   Notion @relation(fields: [contentId], references: [id])

  @@map("content")
}
